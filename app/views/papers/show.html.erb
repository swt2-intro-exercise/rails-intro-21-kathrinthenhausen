<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @paper.title %>
</p>

<p>
  <strong>Venue:</strong>
  <%= @paper.venue %>
</p>

<p>
  <strong>Year:</strong>
  <%= @paper.year %>
</p>

<p>
  <strong>Select authors of the paper:</strong>
<%= form_with(model: @paper, local: true) do |form| %>
  <%=form.select 'author_ids',
  options_from_collection_for_select(Author.all, :id, :name, @paper.author_ids),
  {},
  multiple: true, size: 10 %>
  <%= form.submit %>

<% end %>
</p>


<p>
  <strong>Autoren:</strong>
  <table>
    <tbody>
    <% @paper.authors.each do |author| %>
          <tr>
          <td><%= author.first_name +  " " + author.last_name %></td>
          <td><%= author.homepage %></td>
          </tr>
      <% end %>
      <tbody>
    <table>
</p>

<%= link_to 'Edit', edit_paper_path(@paper) %> |
<%= link_to 'Back', papers_path %>
