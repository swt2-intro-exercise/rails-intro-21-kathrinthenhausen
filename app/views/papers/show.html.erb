<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @paper.title %>
</p>

<p>
  <strong>Venue:</strong>
  <%= @paper.venue %>
</p>

<p>
  <strong>Year:</strong>
  <%= @paper.year %>
</p>

<p>
  <strong>Autoren:</strong>
  <table>
    <tbody>
    <% @paper.authors.each do |author| %>
          <tr>
          <td><%= author.first_name +  " " + author.last_name %></td>
          <td><%= author.homepage %></td>
          <td><%= link_to 'Show', author_path(author) %></td>
          <td><%= link_to 'Edit', edit_author_path(author) %></td>
          <td><%= link_to 'Destroy', author_path(author),
              method: :delete,
              data: { confirm: 'Are you really really sure?' } %></td>
          </tr>
      <% end %>
      <tbody>
    <table>
</p>

<%= link_to 'Edit', edit_paper_path(@paper) %> |
